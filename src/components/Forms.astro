<!-- Forms -->
<div class="bg-orange-300 min-h-screen py-32 px-10">
  <div class="bg-white p-10 mx-auto shadow-2xl rounded md:w-3/4 lg:w-1/2">
    <form>
      <div class="grid grid-cols-1">
        <label for="name" class="mb-2 font-bold">User</label>
        <input
          type="text"
          name="name"
          placeholder="Benutzername"
          class="border border-gray-400 p-1 rounded shadow outline-none focus:border-teal-600"
        />
        <label for="name" class="mt-2 mb-2 font-bold">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Passwort"
          class="border border-gray-400 p-1 rounded shadow outline-none focus:border-teal-600"
        />
        <button
          class="mt-8 p-1 bg-teal-600 rounded text-white shadow-lg hover:bg-teal-500 transition-colors duration-200"
          type="submit">Login</button
        >
      </div>
    </form>
  </div>
</div>

