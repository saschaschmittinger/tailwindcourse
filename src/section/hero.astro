---
import DefaultLayout from "../layouts/Default.astro";
---

<DefaultLayout>
  <section>
    <article class="container mx-auto px-6 lg:px-0 py-24 text-center">
      <h1 class="mb-4 text-6xl font-extrabold">
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-teal-500"
          >Beginner</span
        >
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-teal-500 via-purple-600 to-purple-500"
          >Tailwind</span
        >
      </h1>
      <p class="mb-8">
        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Enim sit
        tenetur nam magnam obcaecati reiciendis?
      </p>
      <a href="#" class="inline-block mb-32">get the course</a>

      <div class="relative">
        <img src="./images/wysbBMS.png" alt="teaser image" />

        <div
          class="absolute top-0 right-0 transform translate-x-4 -translate-y-4 bg-yellow-100"
        >
          <p>We`ll create BeginnerTailwind.com</p>
          <p>All without a single line of custom CSS</p>
        </div>
      </div>
    </article>
  </section>
</DefaultLayout>
